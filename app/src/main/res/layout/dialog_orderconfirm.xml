<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <com.adeel.foodsurfing.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rname"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Order Nummer:"
        android:textSize="20dp"
        android:textColor="@color/back1"
        app:customFont="fonts/Lato-Regular.ttf"
        />

    <com.adeel.foodsurfing.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rno"
        android:layout_toRightOf="@+id/rname"
        android:layout_toEndOf="@+id/rname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:text="50"
        android:textSize="18dp"
        android:textColor="#333333"
        app:customFont="fonts/Lato-Bold.ttf"
        />

    <com.adeel.foodsurfing.CustomTextView
        app:customFont="fonts/AmaticSC-Bold.ttf"
        android:text="Lass es dir schmecken!"
        android:gravity="center"
        android:ellipsize="middle"
        android:textSize="26dp"
        android:textColor="@color/back1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rdescription"
        android:layout_below="@+id/rno"/>

    <com.adeel.foodsurfing.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rdescription2"
        android:layout_below="@+id/rdescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Vielen Dank für dein Einkauf"
        android:textSize="16dp"
        android:textColor="#333333"
        app:customFont="fonts/Lato-Regular.ttf"
        />

    <com.adeel.foodsurfing.CustomTextView
        android:text="Schließen"
        android:textSize="13dp"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/white"
        app:customFont="fonts/Lato-Regular.ttf"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/close"
        android:layout_below="@+id/rdescription2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonbackground"/>

</RelativeLayout>